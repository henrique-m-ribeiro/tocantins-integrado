# Tocantins Integrado - Replit Configuration
# Plataforma de SuperinteligÃªncia Territorial do Tocantins

run = "npm start"
entrypoint = "src/api/server.ts"
modules = ["nodejs-20", "web", "nix"]

[env]
NODE_ENV = "production"
PORT = "3000"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run migrate && npm run seed && npm start"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[languages]

[languages.typescript]
pattern = "**/{*.ts,*.tsx}"

[languages.typescript.languageServer]
start = "typescript-language-server --stdio"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[gitHubImport]
requiredFiles = [".replit", "package.json"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Install"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Migrate DB"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run migrate"

[[workflows.workflow]]
name = "Seed Data"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run seed"

[[workflows.workflow]]
name = "Collect Data"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run collect"

[[workflows.workflow]]
name = "Test Pilot"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:pilot"

[[workflows.workflow]]
name = "Validate Deploy"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run validate"

[[workflows.workflow]]
name = "Full Deploy"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run migrate && npm run seed && npm run validate"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"npm exec tsx -- src/api/server.ts & (cd src/dashboard && node_modules/.bin/tailwindcss -i app/globals.css -o public/styles.css --minify && npm run dev)\""
waitForPort = 5000

[agent]
expertMode = true
